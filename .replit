args = "Simplified DataGuardian Pro"

[[workflows.workflow]]
name = "Simplified DataGuardian Pro"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run simplified_app.py --server.port 5000 --server.headless true"
