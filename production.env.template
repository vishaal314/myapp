# DataGuardian Pro Production Environment Configuration
# Copy this file to .env and update the values for your deployment

# Domain Configuration (REQUIRED)
DOMAIN=your-domain.com
CERTBOT_EMAIL=admin@your-domain.com

# Database Configuration
DB_USER=dataguardian_pro
DB_PASSWORD=generate_secure_password_here
DATABASE_URL=postgresql://dataguardian_pro:generate_secure_password_here@postgres:5432/dataguardian_pro

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=generate_32_char_secret_key_here

# API Keys (REQUIRED - get from providers)
OPENAI_API_KEY=your_openai_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Security Configuration
SSL_ENABLED=true
FORCE_HTTPS=true
SESSION_SECURE=true
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Optional: Scaling and Performance
MAX_WORKERS=4
WORKER_TIMEOUT=120