modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["cacert", "cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlined App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Minimal GDPR PDF"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Standalone GDPR PDF"

[[workflows.workflow]]
name = "Streamlined App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run streamlined_app.py --server.port 5000 --server.headless true"
waitForPort = 5000

[[workflows.workflow]]
name = "Minimal GDPR PDF"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run gdpr_pdf_minimal.py --server.port 5001 --server.headless true"
waitForPort = 5001

[[workflows.workflow]]
name = "Standalone GDPR PDF"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run standalone_gdpr_pdf.py --server.port 5002 --server.headless true"
waitForPort = 5002

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
